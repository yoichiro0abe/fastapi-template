{
    "containerApps.deploymentConfigurations": [
        {
            "label": "fastapisample",
            "type": "AcrDockerBuildRequest",
            "dockerfilePath": "Dockerfile",
            "srcPath": ".",
            "envPath": ".env",
            "resourceGroup": "container-env2024",
            "containerApp": "fastapisample",
            "containerRegistry": "fastapicontainerregi"
        }
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "black-formatter.args": [
        "--line-length",
        "119"
    ],
    "flake8.args": [
        "--max-line-length=119",
        "--max-complexity=10",
        "--ignore=E203,E503,W503,W504"
    ],
    "isort.args": [
        "--profile",
        "black"
    ]
}
